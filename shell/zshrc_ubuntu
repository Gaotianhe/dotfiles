export PATH=$HOME/bin:/usr/local/bin:$PATH
export ZSH="/home/tianheg/.oh-my-zsh"

ZSH_THEME="nodeys"

DISABLE_AUTO_UPDATE="true"
DISABLE_UPDATE_PROMPT="true"

plugins=(
git
zsh-syntax-highlighting
zsh-autosuggestions
web-search
)

source $ZSH/oh-my-zsh.sh
ZSH_DISABLE_COMPFIX="true"

# User configuration

alias rezsh="source $HOME/.zshrc"
alias til="cd ~/github/tianheg/til"
alias blog="cd ~/github/tianheg/blog"
alias news-translation="cd ~/github/tianheg/news-translation"
alias review="cd ~/github/tianheg/review"
alias im="cd ~/github/tianheg/important-doc"
alias good="cd ~/github/tianheg/good"
alias en="cd ~/github/tianheg/english"
alias web="cd ~/github/tianheg/web-collection"
alias self="cd ~/github/tianheg/self"
alias eie="cd ~/github/tianheg/eie"

alias gp="git push origin pages"

alias bb="python3 ~/github/tianheg/bb/bb.py"

# tj/n 的路径
#export N_PREFIX="$HOME/.n"
# 当切换 Node.js 版本时保留 npm
#export N_PRESERVE_NPM=1
#export PATH=$N_PREFIX/bin:$PATH

# terminal proxy (Ubuntu)
export http_proxy=http://127.0.0.1:12333
export https_proxy=http://127.0.0.1:12333

export http_proxy_user=user
export http_proxy_pass=pass

export https_proxy_user=user
export https_proxy_pass=pass

# gpg
export GPG_TTY=$(tty)

# yarn
#export PATH="$PATH:$(yarn global bin)"

# pyenv
export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"
if command -v pyenv 1>/dev/null 2>&1; then
  eval "$(pyenv init -)"
fi

# rbenv
export PATH="$HOME/.rbenv/bin:$PATH"
eval "$(rbenv init -)"
